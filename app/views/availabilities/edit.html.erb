<% provide(:title, "Edit Availability") %>
<h1>Edit Availability</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  
  <%= form_for(@availabilities) do |f| %>
  
  <%= f.hidden_field :user_email, :value => current_user.email, class: 'form-control'%>
  <%= f.hidden_field :user_id, :value => current_user.id, class: 'form-control' %>
  
  <%= f.label :day %>
  <%= f.select :day, options_for_select(["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"]), class: 'form-control'%>
  
  <%= f.label :time %>
  <%= f.number_field :time, in: 7.00..20.0, step: 1, class: 'form-control', placeholder: "24 Hours"%>
  
  <%= f.label :duration %>
  <%= f.number_field :duration, in: 1.00..10.0, step: 0.5, class: 'form-control', placeholder: "H"%>
  
  <%= f.submit "Add Availability", class: "btn btn-info" %>
  <% end %>
  </div>
</div>
