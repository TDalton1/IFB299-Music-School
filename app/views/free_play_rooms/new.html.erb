<% provide(:title, "Book Freem Play Room") %>
<h1>Book Free Play Room Session</h1>
<p>Use the form below to book a time in the free play room!</p>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  
  <%= form_for(@free_play_rooms) do |f| %>
  
  <%= f.label :user_email %>
  <%= f.text_field :user_email, class: 'form-control', placeholder: "Mika@music.com"%>
  
  <%= f.label :user_id %>
  <%= f.text_field :user_id, class: 'form-control' %>
  
  <%= f.label :date %>
  <%= f.date_field :date, class: 'form-control'%>
  
  <%= f.label :time %>
  <%= f.text_field :time, class: 'form-control'%>
  
  <%= f.label :duration %>
  <%= f.text_field :duration, class: 'form-control'%>
  
  <%= f.submit "Create Booking", class: "btn btn-primary" %>
  <% end %>
  </div>
</div>