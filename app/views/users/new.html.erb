<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>

    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', placeholder: "Mika"%>
      
    <%= f.label :last_name %>
    <%= f.text_field :last_name, class: 'form-control', placeholder: "Mika"  %>
      
    <%= f.label :Date_Of_Birth %>
    <%= f.text_field :dob, class: 'form-control', placeholder: "DD/MM/YYYY"  %>

    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control', placeholder: "example@gmail.com"  %>
      
    <%= radio_button_tag(:gender, "Male") %>
    <%= label_tag(:male, "Male") %>
    <%= radio_button_tag(:gender, "Female") %>
    <%= label_tag(:female, "Female") %>
    <%= radio_button_tag(:gender, "Other", :checked) %>
    <%= label_tag(:other, "Other") %>

<br><br>

    <%= f.label :Facebook_ID %>
    <%= f.text_field :facebook_ID, placeholder: "www.facebook.com/Mika_Williams_Music_School" %>
      
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control', placeholder: "Secret!"  %>

    <%= f.label :password_confirmation, "Confirmation" %>
    <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Secret!"  %>

    <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>