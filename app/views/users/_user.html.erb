<!--HTML for the display of each user in the students and teacher page -->
<li>
  <%= gravatar_for user, size: 50 %>
  <%= link_to user.name + " " + user.last_name, user %>
  <br>
  <%= user.email %>
  <% if current_user.admin? && !current_user?(user) %>
    <br>
    
    <%= link_to "Delete |", user, method: :delete, data: { confirm: "Are you sure?" } %>
    
    <%= link_to "Make Admin ", user, data: { confirm: "Are you sure?" } %>
    
    <% if user.teacher? && !user.activated?%>
      
     <a href="<%= edit_account_activation_url(user) %>" class="btn btn-info" role="button">Activate</a>
     
     <% end %>
  <% end %>
</li>