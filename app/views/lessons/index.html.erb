  <tr class="header">
  <th>Teacher Email</th>  
  <th>Date</th>
  <th>Time</th>
  <th>Duration</th>
  <th></th>
  </tr>
  </thead>
  
  <tbody>
  <% @lessons.each do |lesson| %>
  <% if lesson.student_email == current_user.email %>
  <tr>
    <td><%= interview.teacher_email%></td>
    <td><%= interview.date%></td>
    <td><%= interview.time%></td>
    <td><%= interview.duration%></td>
    <td>
      <a href="<%= edit_interview_path(interview) %>" class="btn btn-info" role="button">Edit</a>
      <a href="<%= delete_interview_path(interview) %>" class="btn btn-danger" role="button">Delete</a>
    </td>
      <% end %>
  </tr>
  <% end %>
  </tbody>
</table>